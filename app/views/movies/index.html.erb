<h1>All Movies</h1>
<% if params[:format] != nil %>
<%= link_to "<back", list_path(List.find(params[:format])) %>
<% end %>

<%= link_to 'Add a movie to library', new_movie_path %>

<ul class = 'list-group'>
  <% @movies.each do |movie| %>
    <li class = 'list-group-item'><%= movie.title %>
    <%= link_to 'Bookmark and add to list', new_movie_bookmark_path(movie, params["format"]) %>
      <%= link_to "🗑️",
          movie_path(movie),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
